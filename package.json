{
  "name": "rosie-ui",
  "version": "0.2.0",
  "description": "JavaScript library that build on top of React 19.1 and Bootstrap 5, helping you build data-intensive, cross-platform web apps for desktops, tablets, and smartphones.",
  "author": "Lionel Nguyen <huynguyen8505@gmail.com> (https://github.com/huytrongnguyen)",
  "license": "MIT",
  "repository": "https://github.com/huytrongnguyen/rosie",
  "bugs": "https://github.com/huytrongnguyen/rosie/issues",
  "source": "ts/index.ts",
  "main": "dist/js/index.js",
  "types": "./dist/js/index.d.ts",
  "targets": {
    "main": {
      "optimize": true
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build": "npm run fonts && npm run css && npm run js",
    "js": "tsc",
    "css": "sass scss/index.scss dist/css/rosie.css --style=compressed --no-source-map",
    "fonts": "cp -r node_modules/@fortawesome/fontawesome-free/webfonts dist"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "7.0.0",
    "@popperjs/core": "2.11.8",
    "axios": "1.11.0",
    "bootstrap": "5.3.8"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/bootstrap": "5.2.10",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/jest": "30.0.0",
    "jest": "30.1.0",
    "sass": "1.89.2",
    "ts-jest": "29.4.1",
    "typescript": "5.8.3"
  }
}
