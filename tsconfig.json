{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [ "dom", "esnext" ],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist/js",
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["ts/src"],
  "exclude": ["node_modules", "ts/test"]
}